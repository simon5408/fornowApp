<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fornow.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.RWRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="10" />

    <application
        android:name=".ui.AppClass"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppTheme" >
        <activity
            android:name="com.fornow.app.ui.preload.PreLoad"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fornow.app.ui.main.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Overlay"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.fornow.app.ui.home.HomeActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fornow.app.ui.login.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="com.fornow.app.ui.login.RegisterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="com.fornow.app.ui.mine.GrxxActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fornow.app.ui.setting.YjfkActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fornow.app.ui.addressmanager.SelectProvince"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fornow.app.ui.addressmanager.SelectCities"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fornow.app.ui.addressmanager.SelectArea"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fornow.app.ui.addressmanager.SelectRegion"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fornow.app.ui.mine.MineActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.fornow.app.ui.setting.SettingActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>