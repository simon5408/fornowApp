<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <ScrollView
            style="@style/home_pullToRefresh_style"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:fadingEdge="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.fornow.app.ui.home.AutoPlayGallery
                    android:id="@+id/img_gallery"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dip" >

                        <TextView
                            android:id="@+id/detail_name"
                            style="@style/goods_name_text"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical" />

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dip" >

                            <ImageView
                                android:id="@+id/rmb_img"
                                android:layout_width="20dip"
                                android:layout_height="20dip"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/rmb" />

                            <TextView
                                android:id="@+id/detail_current_price"
                                style="@style/goods_unit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_toRightOf="@+id/rmb_img"
                                android:paddingLeft="5dip" />

                            <TextView
                                android:id="@+id/detail_origin_price"
                                style="@style/goods_originPrice_text_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_toRightOf="@+id/detail_current_price"
                                android:paddingLeft="8dip" />

                            <TextView
                                android:id="@+id/sell_count"
                                style="@style/goods_unit_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/green" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/detail_groupbuy_end_time"
                            style="@style/goods_unit_text"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:textColor="@color/green" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="addFavorite"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/favorite_flag"
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:background="@drawable/favorite_no"
                            android:clickable="false" />

                        <TextView
                            android:id="@+id/is_favorite_text"
                            style="@style/cart_introduce_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_shoucang" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/detail_deliver_area"
                    style="@style/goods_unit_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:textColor="@color/green" />

                <LinearLayout
                    style="@style/home_padding"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/home_tuijian_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_spms" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/underline" >
                </LinearLayout>

                <TextView
                    android:id="@+id/detail_introduction"
                    style="@style/goods_name_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:textColor="@color/green" />
            </LinearLayout>
        </ScrollView>

        <FrameLayout
            style="@style/header_style"
            android:background="@drawable/header_bg" >

            <TextView
                style="@style/header_text_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="@string/header_detail_text" />

            <LinearLayout
                android:layout_width="60dip"
                android:layout_height="fill_parent"
                android:background="@drawable/top_back__btn_bg"
                android:gravity="center"
                android:onClick="softBack" >

                <ImageButton
                    android:id="@+id/header_back"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/left_arrow"
                    android:clickable="false"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="9"
        android:background="@drawable/tab_border"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dip" >

        <Button
            android:layout_width="120dip"
            android:layout_height="30dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/btn_dark_origin_bg"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="confirmBuy"
            android:text="@string/str_ljgm"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:layout_width="120dip"
            android:layout_height="30dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/btn_origin_bg"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="add2cart"
            android:text="@string/str_jrgwc"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>